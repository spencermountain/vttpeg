  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "devDependencies": {
    "rollup": "4.52.3"
  },
  "license": "MIT",
  "dependencies": {
    "glob": "^11.0.3",
    "yargs": "^18.0.0"
  }
