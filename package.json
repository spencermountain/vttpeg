{
  "name": "vttpeg",
  "version": "0.0.1",
  "description": "utility for managing subtitles in vtt format",
  "scripts": {
    "build": "npm run pack && npm run version && rollup -c --silent",
    "lint": "eslint ./src"
  },
  "bin": {
    "vttpeg": "cli/bin.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spencermountain/vttpeg.git"
  },
  "files": [
    "src",
    "builds"
